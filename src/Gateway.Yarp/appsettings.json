{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Authority": "http://localhost:5002",
    "Audience": "hub-api",
    "AllowDevelopmentWithoutAuthority": false
  },
  "OpenTelemetry": {
    "OtlpEndpoint": "http://localhost:4317"
  },
  "Seq": {
    "ServerUrl": "http://localhost:5341"
  },
  "ReverseProxy": {
    "Routes": {
           "inbound-route": {
             "ClusterId": "inbound-cluster",
             "Match": {
               "Path": "/api/requests/{**catch-all}"
             },
             "Transforms": [
               {
                 "PathPattern": "/requests/{**catch-all}"
               }
             ]
           },
      "inbound-requests-direct": {
        "ClusterId": "inbound-cluster",
        "Match": {
          "Path": "/requests/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/requests/{**catch-all}"
          }
        ]
      },
      "swagger-route": {
        "ClusterId": "inbound-cluster",
        "Match": {
          "Path": "/swagger-inbound/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/{**catch-all}"
          }
        ]
      },
      "swagger-json-route": {
        "ClusterId": "inbound-cluster",
        "Match": {
          "Path": "/swagger-inbound/v1/swagger.json"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/v1/swagger.json"
          }
        ]
      }
    },
    "Clusters": {
      "inbound-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      }
    }
  }
}
